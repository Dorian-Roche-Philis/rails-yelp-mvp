<div class="container">
<h1>Restaurant List</h1>
<ul class="list-group list-group-flush mt-5">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item"><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
  <% end %>
</ul>
</div>

<%= link_to 'Add a new Restaurant', new_restaurant_path, class: "btn btn-info btn-lg mt-5"%>

