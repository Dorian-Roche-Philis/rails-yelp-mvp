
<div class="container">
  <h1>Complete Restaurant Information</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::CATEGORY%>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>
</div>

<%= link_to 'Back', restaurants_path, class: "btn btn-info btn-lg mt-5" %>
